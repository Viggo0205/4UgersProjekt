@page
@model _4UgersProjekt.Pages.Recipes.GetAllCustomersModel
@{
}
<h1>Customers</h1>
<form method="post">
	<div class="input-group mb-3">
		<input asp-for="SearchString" class="form-control mr-1" 
			   placeholder="Enter search term" />
		<input type="submit" asp-page-handler="NameSearch" 
			   value="Search" class="btn btn-primary" />
	</div>
</form>

<table class="table table-bordered table-hover table-striped">
	<thead>
		<tr>
	<th>
		Id
	</th>
	<th>
		Name
	</th>
	<th>
		
	</th>
	<th>
		Mail
	</th>


		</tr>
	</thead>
	<tbody>
		@if (Model.Customer != null)
		{
			foreach (var item in Model.Customer)
			{
								<tr>
									<td>
						@item.Id
									</td>
									<td>
						@item.Name
									</td>
									<td>
										<a class="btn btn-primary btn-sm" type="button" title="Edit"
										asp-page="EditCustomer" asp-route-id="@item.Id">Edit<i class="fa fa-edit"></i></a>
										<a class="btn btn-danger btn-sm " type="button" title="Delete"
										asp-page="DeleteCustomer" asp-route-id="@item.Id">Delete<i class="fa fa-trash"></i></a>
									</td>
									<td>
						@item.Email
									</td>
									<td>
						@for(int i = 0; i < item.Favorites.Count; i++)
						{
							@item.Favorites[i].Name
						}
					</td>

								</tr>
			}
		}
	</tbody>
</table>