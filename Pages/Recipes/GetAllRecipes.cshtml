@page
@model _4UgersProjekt.Pages.Recipes.GetAllRecipesModel
@{
}

<h1>Recipes</h1>
<form method="post">
	<div class="input-group mb-3">
		<input asp-for="SearchString" class="form-control mr-1" 
			   placeholder="Enter search term" />
		<input type="submit" asp-page-handler="NameSearch" 
			   value="Search" class="btn btn-primary" />
	</div>
</form>
<form method="post">
	<div class="input-group mb-3">
		<div class="input-group-prepend">
			<span class="input-group-text">Min</span>
		</div>
		<input asp-for="MinCalories" class="form-control mr-1"/>
		<div class="input-group-prepend">
			<span class="input-group-text">Max</span>
		</div>
		<input asp-for="MaxCalories" class="form-control mr-1"/>
		<input type="submit" asp-page-handler="CalorieFilter" 
			   value="Filter" class="btn btn-primary" />
	</div>
</form>

<table class="table table-bordered table-hover table-striped">
	<thead>
		<tr>
	<th>
		Id
	</th>
	<th>
		Name
	</th>
	<th>
		Ingredients
	</th>
	<th>
		Total Calories
	</th>

		</tr>
	</thead>
	<tbody>
		@if (Model.Recipes != null)
		{
			foreach (var item in Model.Recipes)
			{
						<tr>
							<td>
						@item.Id
							</td>
							<td>
						@item.Name
							</td				
							<td>
								<a class="btn btn-primary btn-sm" type="button" title="Edit" 
								asp-page="EditItem" asp-route-id="@item.Id">Edit</a>
								<a class="btn btn-danger btn-sm " type="button" title="Delete" 
								asp-page="DeleteItem" asp-route-id="@item.Id">Delete</a>
							</td>
								<td>
						@for(int i = 0; i < item.Ingredients.Count; i++)
						{
							@item.Ingredients[i]
						}
						
							</td>
										<td>
						@item.TotalCalories
									</td
							<td>
							
						</tr>
			}
		}
	</tbody>
</table>
